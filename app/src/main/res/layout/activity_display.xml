<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_328d1c06751398cf9ff2ac8f8d9206c"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".DisplayActivity">

    <Button
        android:id="@+id/btnMovieWithRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF003B"
        android:text="SHOW ALL PG-13 MOVIES" />

    <Spinner
        android:id="@+id/spinnerRatingFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF" />

    <ListView
        android:id="@+id/listViewMovies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" />
</LinearLayout>